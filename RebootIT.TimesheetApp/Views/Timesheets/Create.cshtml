@model RebootIT.TimesheetApp.Data.Timesheet

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Timesheet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <label asp-for="ClientId" class="control-label"></label>
            <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
            <div class="form-group">
                <label asp-for="StaffId" class="control-label"></label>
                <select asp-for="StaffId" class="form-control" asp-items="ViewBag.StaffId"></select>
                <div class="form-group">
                    <label asp-for="LocationId" class="control-label"></label>
                    <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="MinutesWorked" class="control-label"></label>
                            <input asp-for="MinutesWorked" class="form-control" />
                            <span asp-validation-for="MinutesWorked" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
